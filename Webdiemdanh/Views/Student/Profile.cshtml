@model Webdiemdanh.Models.User

@{
    ViewBag.Title = "Thông tin sinh viên";
}

<div class="container mt-4">
    <h2 class="text-primary">🎓 Thông tin cá nhân</h2>

    <table class="table table-striped table-bordered mt-4">
        <tbody>
            <tr>
                <th style="width: 200px;">👤 Họ và tên</th>
                <td>@Model.FullName</td>
            </tr>
            <tr>
                <th>📧 Email</th>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <th>🔑 Vai trò</th>
                <td>@Model.Role</td>
            </tr>
            <tr>
                <th>Lớp đang học</th>
                <td>
                    @if (Model.StudentClasses != null && Model.StudentClasses.Any())
                    {
                        <ul>
                            @foreach (var cls in Model.StudentClasses)
                            {
                                <li>
                                    @cls.Class.ClassName –
                                    <span class="text-muted fst-italic">
                                        GV: @cls.Class.Teacher?.FullName 
                                    </span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <em>Chưa tham gia lớp nào.</em>
                    }
                </td>
            </tr>

        </tbody>
    </table>
</div>
