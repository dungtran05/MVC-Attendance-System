@model Webdiemdanh.Models.Session

<h2>Tạo buổi học</h2>

<form asp-action="Create" method="post">
    <label>Lớp học:</label>
    <select asp-for="ClassID" asp-items="ViewBag.Classes" class="form-control"></select>

    <label>Ngày học:</label>
    <input asp-for="SessionDate" type="date" class="form-control" />

    <label>Bắt đầu:</label>
    <input asp-for="StartTime" type="time" class="form-control" />

    <label>Kết thúc:</label>
    <input asp-for="EndTime" type="time" class="form-control" />

    <button type="submit" class="btn btn-success mt-2">Tạo buổi học</button>
</form>
