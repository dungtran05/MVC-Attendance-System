@{
    ViewBag.Title = "Đăng ký tài khoản";
}
<h2>Đăng ký</h2>

<form asp-action="Register" method="post">
    <div class="form-group">
        <label>Họ tên:</label>
        <input name="fullName" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Email:</label>
        <input name="email" type="email" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Mật khẩu:</label>
        <input name="password" type="password" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Vai trò:</label>
        <select name="role" class="form-control" required>
            <option value="">-- Chọn --</option>
            <option value="Teacher">Giáo viên</option>
            <option value="Student">Học sinh</option>
        </select>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="text-danger mt-2">@ViewBag.Error</div>
    }

    @if (ViewBag.Message != null)
    {
        <div class="text-success mt-2">@ViewBag.Message</div>
    }

    <button type="submit" class="btn btn-success mt-3">Đăng ký</button>
</form>

<a href="/Auth/Login">← Quay lại đăng nhập</a>
